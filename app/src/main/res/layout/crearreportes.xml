<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/degradado_redondo"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="42dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextRep"
            android:layout_width="129dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:text="Reporte No. "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumRep"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:hint="Número de Reporte"
            android:textAlignment="center"
            android:textColor="#FFFDFD"
            android:textColorHint="@color/ipnNivel4"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="42dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FechaRep"
                android:layout_width="190dp"
                android:layout_height="36dp"
                android:hint="  Fecha"
                android:inputType="date"
                android:textColorHint="@color/ipnNivel4" />

            <TextView
                android:id="@+id/HoraRep"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:ems="10"
                android:hint="  Hora"
                android:inputType="time"
                android:textColorHint="@color/ipnNivel4" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Encargado/a"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16"/>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/NombreEncRep"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:hint="Nombre(s)"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ApePEncRep"
            android:layout_width="109dp"
            android:layout_height="39dp"
            android:layout_marginStart="6dp"
            android:hint="Apellido Pat"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ApeMEncRep"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:hint="Apellido Mat"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextNumCompu"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="No. Computadora: "
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/NumCompu"
            android:layout_width="178dp"
            android:layout_height="31dp"
            android:hint="Numero de Computadora"
            android:textAlignment="center"
            android:textColorHint="@color/ipnNivel3" />
    </LinearLayout>

    <TextView
        android:id="@+id/TitleRep"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="Título del Reporte"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/ipnNivel3"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="269dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DescRep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="9dp"
            android:hint="Descripción del Reporte"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/AgregarRep"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Agregar Reporte"
        android:textColor="@color/azulMorado" />

</LinearLayout>
