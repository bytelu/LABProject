<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/degradado_redondo"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/encNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/encApeP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/encApeM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/aluCarrera"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:hint="Carrera"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/ipnNivel3"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Boleta: "
            android:textAlignment="center"
            android:textColor="#FDFDFD" />

        <TextView
            android:id="@+id/aluBoleta"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Boleta"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semestre: "
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/aluSemestre"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:hint="Semestre"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="@color/ipnNivel3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aluComp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Â°"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
