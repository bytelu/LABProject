<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/degradado_redondo"
    android:id="@+id/motherlayout"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/fechahora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Textfecha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:textAlignment="center"
            android:textColorHint="@color/ipnNivel4"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/Texthora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:textAlignment="center"
            android:textColorHint="@color/ipnNivel4"
            android:textSize="22dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/titleflechadesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ViewTitulo"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/flechadesplegable"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/arrow_down_float" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/DesplegableVistaRep"
        android:layout_width="wrap_content"
        android:layout_height="187dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextNombreEnc"
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:text="Nombre del Encargado"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="389dp"
                android:layout_height="40dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ViewNombreEncRep"
                    android:layout_width="121dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:hint="Nombre(s)"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/ipnNivel3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ViewApePEncRep"
                    android:layout_width="135dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="6dp"
                    android:hint="Apellido Pat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/ipnNivel3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ViewApeMEncRep"
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:hint="Apellido Mat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/ipnNivel3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/VistaNumeroCompu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ico_doscompus" />

                <TextView
                    android:id="@+id/TextViewNumComputadora"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Número de Computadora"
                    android:textAlignment="center"
                    android:textColorHint="@color/ipnNivel3"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImagenReportes"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ico_reportes" />

                <TextView
                    android:id="@+id/ViewNumRep"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:hint="Numero de reporte"
                    android:textAlignment="center"
                    android:textColorHint="@color/ipnNivel3"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/ViewDescripcion"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Descripción"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>