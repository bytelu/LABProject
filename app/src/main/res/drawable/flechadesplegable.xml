<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco para la flecha -->
    <item android:drawable="@android:color/white" />

    <!-- Flecha desplegable hacia abajo -->            <shape android:shape="arrow">
                <size android:width="24dp" android:height="24dp" />
                <solid android:color="@android:color/darker_gray" />
                <item>
                    <item android:left="8dp" android:top="2dp" android:right="8dp">
                        <shape android:shape="rectangle">
                            <size android:width="2dp" android:height="10dp" />
                            <solid android:color="@android:color/white" />
                        </shape>
                    </item>
                    <item android:left="2dp" android:top="8dp" android:right="2dp">
                        <shape android:shape="rectangle">
                            <size android:width="20dp" android:height="2dp" />
                            <solid android:color="@android:color/white" />
                        </shape>
                    </item>
                </item>
            </shape>
        </rotate>
    </item>
</layer-list>
